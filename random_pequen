    <input type="range" id="rango" min="250" max="350" value="250" step="1">
    <div id="max-value">M치ximo: 250</div>
    <button id="generar">Generar N칰mero Aleatorio</button>
    <div id="resultado"></div>

    <script>
        const rangoInput = document.getElementById('rango');
        const maxValueDisplay = document.getElementById('max-value');

        // Actualizar el texto del valor m치ximo al mover el slider
        rangoInput.oninput = function() {
            maxValueDisplay.textContent = 'M치ximo: ' + rangoInput.value;
        };

        document.getElementById('generar').onclick = function() {
            const maxRango = parseInt(rangoInput.value);
            // Generar un n칰mero aleatorio entre 1 y el rango m치ximo
            const numeroAleatorio = Math.floor(Math.random() * maxRango) + 1;
            document.getElementById('resultado').textContent = numeroAleatorio;
        };
    </script>
